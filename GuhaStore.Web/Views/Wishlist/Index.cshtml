@{
    ViewData["Title"] = "My Wishlist";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>My Wishlist</h1>
                <a href="~/Products" class="btn btn-primary">
                    <i class="fas fa-shopping-bag"></i> Continue Shopping
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var wishlistItem in Model)
                    {
                        var product = wishlistItem.Product;
                        if (product != null)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                <div class="card h-100 product-card">
                                    <div class="position-relative">
                                        <a href="~/Products/Details/@product.ProductId">
                                            <img src="~/uploads/products/@product.ProductImage"
                                                 class="card-img-top"
                                                 alt="@product.ProductName"
                                                 style="height: 200px; object-fit: cover;" />
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 wishlist-btn active"
                                                onclick="removeFromWishlist(@product.ProductId, this)">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h6 class="card-title">
                                            <a href="~/Products/Details/@product.ProductId" class="text-decoration-none text-dark">
                                                @product.ProductName
                                            </a>
                                        </h6>

                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                @if (product.ProductSale > 0)
                                                {
                                                    <div>
                                                        <span class="text-decoration-line-through text-muted small">
                                                            @product.ProductPrice.ToString("N0") ₫
                                                        </span>
                                                        <div class="text-danger fw-bold">
                                                            @((int)(product.ProductPrice * (1 - product.ProductSale / 100.0))).ToString("N0") ₫
                                                        </div>
                                                    </div>
                                                    <span class="badge bg-danger">Sale</span>
                                                }
                                                else
                                                {
                                                    <div class="fw-bold">
                                                        @product.ProductPrice.ToString("N0") ₫
                                                    </div>
                                                }
                                            </div>

                                            <div class="d-flex gap-2">
                                                <form action="~/Cart/AddToCart" method="post" class="flex-grow-1">
                                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                                    <input type="hidden" name="capacityId" value="@(product.CapacityId)" />
                                                    <input type="hidden" name="quantity" value="1" />
                                                    <button type="submit" class="btn btn-primary btn-sm w-100">
                                                        <i class="fas fa-cart-plus"></i> Add to Cart
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-heart fa-4x text-muted mb-4"></i>
                    <h3 class="text-muted mb-3">Your wishlist is empty</h3>
                    <p class="text-muted mb-4">Add items you love to your wishlist to keep track of them.</p>
                    <a href="~/Products" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-bag"></i> Start Shopping
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function removeFromWishlist(productId, buttonElement) {
            if (confirm('Remove this item from your wishlist?')) {
                $.post('/Wishlist/Remove', { productId: productId })
                    .done(function(response) {
                        if (response.success) {
                            // Remove the card from the page
                            $(buttonElement).closest('.col-lg-3, .col-md-4, .col-sm-6').fadeOut(300, function() {
                                $(this).remove();

                                // Check if wishlist is now empty
                                if ($('.product-card').length === 0) {
                                    location.reload();
                                }
                            });

                            showToast('Removed from wishlist', 'success');
                        } else {
                            showToast('Failed to remove item', 'error');
                        }
                    })
                    .fail(function() {
                        showToast('Error occurred', 'error');
                    });
            }
        }

        function showToast(message, type = 'info') {
            // Simple alert for now - can be enhanced with proper toast library
            alert(message);
        }
    </script>
}
