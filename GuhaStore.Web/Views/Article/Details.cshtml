@model GuhaStore.Core.Entities.Article
@{
    ViewData["Title"] = "Chi tiết bài viết";
}

<div class="container">
    <h2>@Model.ArticleTitle</h2>
    <p class="text-muted">Tác giả: @Model.ArticleAuthor | @Model.ArticleDate.ToString("dd/MM/yyyy")</p>
    <p>@Model.ArticleSummary</p>
    <div class="mb-3">@Html.Raw(Model.ArticleContent)</div>
    @if (!string.IsNullOrEmpty(Model.ArticleImage))
    {
        <img src="~/@Model.ArticleImage" style="max-height:200px;" />
    }
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.ArticleId" class="btn btn-primary">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

