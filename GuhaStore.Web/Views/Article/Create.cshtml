@model GuhaStore.Core.Entities.Article
@{
    ViewData["Title"] = "Thêm bài viết";
}

<div class="container">
    <h2 class="mb-3">Thêm bài viết</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="card card-body">
        <div class="mb-3">
            <label class="form-label">Tiêu đề</label>
            <input asp-for="ArticleTitle" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Tác giả</label>
            <input asp-for="ArticleAuthor" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Tóm tắt</label>
            <textarea asp-for="ArticleSummary" class="form-control" rows="2"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Nội dung</label>
            <textarea asp-for="ArticleContent" class="form-control" rows="6"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Ảnh</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Trạng thái</label>
            <select asp-for="ArticleStatus" class="form-select">
                <option value="1">Hiển thị</option>
                <option value="0">Nháp</option>
            </select>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>

