@model GuhaStore.Core.Entities.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a asp-action="MyAccount" class="list-group-item list-group-item-action">Thông tin tài khoản</a>
                <a asp-action="OrderHistory" class="list-group-item list-group-item-action">Lịch sử đơn hàng</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>Chi tiết đơn hàng #@Model.OrderCode</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Thông tin đơn hàng</h5>
                            <p><strong>Mã đơn hàng:</strong> #@Model.OrderCode</p>
                            <p><strong>Ngày đặt:</strong> @Model.OrderDate</p>
                            <p><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("N0") VNĐ</p>
                            <p><strong>Trạng thái:</strong>
                                @switch (Model.OrderStatus)
                                {
                                    case 0: <span class="badge bg-warning">Chờ xử lý</span> break;
                                    case 1: <span class="badge bg-info">Đang xử lý</span> break;
                                    case 2: <span class="badge bg-primary">Đã giao hàng</span> break;
                                    case 3: <span class="badge bg-success">Đã hoàn thành</span> break;
                                    case 4: <span class="badge bg-danger">Đã hủy</span> break;
                                    default: <span class="badge bg-secondary">Không xác định</span> break;
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5>Thông tin giao hàng</h5>
                            @if (Model.Delivery != null)
                            {
                                <p><strong>Người nhận:</strong> @Model.Delivery.DeliveryName</p>
                                <p><strong>Điện thoại:</strong> @Model.Delivery.DeliveryPhone</p>
                                <p><strong>Địa chỉ:</strong> @Model.Delivery.DeliveryAddress</p>
                                @if (!string.IsNullOrEmpty(Model.Delivery.DeliveryNote))
                                {
                                    <p><strong>Ghi chú:</strong> @Model.Delivery.DeliveryNote</p>
                                }
                            }
                        </div>
                    </div>

                    @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                    {
                        <h5>Chi tiết sản phẩm</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th class="text-end">Giá</th>
                                    <th class="text-end">Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.OrderDetails)
                                {
                                    var total = detail.ProductPrice * detail.ProductQuantity * (100 - detail.ProductSale) / 100;
                                    <tr>
                                        <td>@(detail.Product?.ProductName ?? "N/A")</td>
                                        <td>@detail.ProductQuantity</td>
                                        <td class="text-end">@detail.ProductPrice.ToString("N0") VNĐ</td>
                                        <td class="text-end">@total.ToString("N0") VNĐ</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Tổng cộng:</th>
                                    <th class="text-end">@Model.TotalAmount.ToString("N0") VNĐ</th>
                                </tr>
                            </tfoot>
                        </table>
                    }

                    <div class="mt-3">
                        <a asp-action="OrderHistory" class="btn btn-secondary">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

