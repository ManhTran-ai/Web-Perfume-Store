@{
    ViewData["Title"] = "Products Management";
    Layout = "_LayoutAdmin";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Products Management</h4>
            <a href="~/Admin/ProductAdmin/Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Product
            </a>
        </div>
    </div>
</div>

<!-- Search and Filters -->
<div class="admin-card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search products..." id="search-input">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
            <div class="col-md-2">
                <a href="~/Admin/ProductAdmin" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-times"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Products Table -->
<div class="admin-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-box me-2"></i>Products (@ViewBag.TotalCount)</span>
        <div class="d-flex align-items-center">
            <span class="text-muted me-2">Page @ViewBag.CurrentPage of @ViewBag.TotalPages</span>
        </div>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.ProductId</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ProductImage))
                                    {
                                        <img src="@product.ProductImage" alt="@product.ProductName" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <span class="text-muted">No image</span>
                                    }
                                </td>
                                <td>
                                    <strong>@product.ProductName</strong>
                                    @if (product.ProductSale > 0)
                                    {
                                        <br><small class="text-danger">@product.ProductSale% OFF</small>
                                    }
                                </td>
                                <td>@product.Category?.CategoryName</td>
                                <td>@product.Brand?.BrandName</td>
                                <td>
                                    @if (product.ProductSale > 0)
                                    {
                                        <span class="text-decoration-line-through text-muted">@product.ProductPrice.ToString("N0") VND</span><br>
                                        <span class="text-success fw-bold">@((int)(product.ProductPrice * (1 - product.ProductSale / 100.0))).ToString("N0") VND</span>
                                    }
                                    else
                                    {
                                        <span>@product.ProductPrice.ToString("N0") VND</span>
                                    }
                                </td>
                                <td>
                                    <span class="@(product.ProductQuantity > 10 ? "text-success" : product.ProductQuantity > 0 ? "text-warning" : "text-danger")">
                                        @product.ProductQuantity
                                    </span>
                                </td>
                                <td>
                                    <span class="status-badge @(product.ProductStatus == 1 ? "status-active" : "status-inactive")">
                                        @(product.ProductStatus == 1 ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="~/Admin/ProductAdmin/Details/@product.ProductId" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="~/Admin/ProductAdmin/Edit/@product.ProductId" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="~/Admin/ProductAdmin/Delete/@product.ProductId" class="btn btn-sm btn-outline-danger btn-delete" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Product pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="~/Admin/ProductAdmin?page=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize&searchTerm=@ViewBag.SearchTerm">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="~/Admin/ProductAdmin?page=@i&pageSize=@ViewBag.PageSize&searchTerm=@ViewBag.SearchTerm">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="~/Admin/ProductAdmin?page=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize&searchTerm=@ViewBag.SearchTerm">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No products found</h5>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <p class="text-muted">Try adjusting your search criteria.</p>
                    <a href="~/Admin/ProductAdmin" class="btn btn-outline-primary">Clear Search</a>
                }
                else
                {
                    <p class="text-muted">Get started by adding your first product.</p>
                    <a href="~/Admin/ProductAdmin/Create" class="btn btn-primary">Add First Product</a>
                }
            </div>
        }
    </div>
</div>
