<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel - GuhaStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <h3 class="text-white mb-0">GuhaStore Admin</h3>
            </div>
            <ul class="sidebar-menu">
                <li class="menu-item">
                    <a href="~/Admin/Dashboard" class="menu-link">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/ProductAdmin" class="menu-link">
                        <i class="fas fa-box"></i> Products
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/ProductAdmin/Reviews" class="menu-link">
                        <i class="fas fa-star"></i> Reviews
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/OrderAdmin" class="menu-link">
                        <i class="fas fa-shopping-cart"></i> Orders
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/CategoryAdmin" class="menu-link">
                        <i class="fas fa-tags"></i> Categories
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/BrandAdmin" class="menu-link">
                        <i class="fas fa-trademark"></i> Brands
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/CustomerAdmin" class="menu-link">
                        <i class="fas fa-users"></i> Customers
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/Article" class="menu-link">
                        <i class="fas fa-newspaper"></i> Articles
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/Article/Comments" class="menu-link">
                        <i class="fas fa-comments"></i> Comments
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/Admin/Inventory" class="menu-link">
                        <i class="fas fa-warehouse"></i> Inventory
                    </a>
                </li>
                <li class="menu-item">
                    <a href="~/" class="menu-link">
                        <i class="fas fa-home"></i> Back to Store
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="admin-content">
            <!-- Top Bar -->
            <header class="admin-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <div class="user-info">
                        <span class="me-2">Welcome, @Context.Session.GetString("AccountName")</span>
                        <a href="~/Account/Logout" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="admin-main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
